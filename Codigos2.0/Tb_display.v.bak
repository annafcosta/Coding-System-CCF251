module tb_display();
	reg a, b, c, d, ready, reset;
   wire s0, s1, s2, s3;
	reg [6:0] ds_t;
	 
	Codificador en(.A(a), .B(b), .C(c), .D(d), .ready(ready), .reset(reset), .S0(s0), .S1(s1), .S2(s2), .S3(s3));
	Display di1(.s0(s0), .s1(s1), .s2(s2), .s3(s3), .ds(ds_t));
	
	initial begin
		reset = 1;
		#4;
		reset = 0;
		#4;
		
		a = 1'b0; b = 1'b0; c = 1'b0; d = 1'b1;
        $display("Time = %0t | Entrada = %0d%0d%0d%0d Saída = %0d%0d%0d%0d Saída_Display = %0d_%0d_%0d_%0d_%0d_%0d_%0d",
             $time, a, b, c, d, s0, s1, s2, s3, ds_t);
		
		
		$stop;
	end
	 





endmodule
	 